{% extends 'base.html.twig' %}

{% block body %}
<h1 class="mt-4">{{ post.title }}</h1>
<hr>
<p>
    <span>&nbsp;<i class="fa fa-clock-o"></i>&nbsp;Posted on {{ post.publishedAt | date() }}</span>
</p>
<hr>
<span>{{ post.content }}</span>
<hr>
<h5>Comments:</h5>
{% for comment in post.comments %}
    <div id="comment-{{ comment.id }}" class="media mb-4">
        <img class="d-flex mr-3 rounded-circle" src="//placehold.it/50x50" alt="">
        <div class="media-body">
            <h5 class="mt-0">{{ comment.name }}</h5>
            <h6>{{ comment.createdAt | date() }}</h6>
            <span>{{ comment.comment }}</span>
        </div>
    </div>
{% endfor %}
<div class="card my-4">
    <h5 class="card-header">Leave a comment:</h5>
    <div class="card-body">
        {{ form_start(commentForm) }}
            {{ form_widget(commentForm) }}
        {{ form_end(commentForm) }}
        <input type="submit" class="btn btn-primary" value="Post Comment" />
    </div>
</div>
{% endblock %}
