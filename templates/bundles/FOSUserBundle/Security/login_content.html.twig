{% trans_default_domain 'FOSUserBundle' %}

<div class="card p-4">
    <div class="card-body">
        <h1>{{ 'security.singin.login' | trans }}</h1>
        <p class="text-muted">{{ 'security.singin.signin' | trans }}</p>
        <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
            {% if error %}
                <div class="alert alert-danger" role="alert">{{ error.messageKey | trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="input-group mb-3">
                <div class="input-group-prepend"><span class="input-group-text"><i class="icon-user"></i></span></div>
                <input type="text" class="form-control" name="_username" placeholder="{{ 'security.login.username' | trans }}"
                       required="required" autocomplete="username" autofocus>
            </div>
            <div class="input-group mb-4">
                <div class="input-group-prepend"><span class="input-group-text"><i class="icon-lock"></i></span></div>
                <input type="password" class="form-control" name="_password" placeholder="{{ 'security.login.password' | trans }}"
                       required="required" autocomplete="current-password">
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" id="remember_me" name="_remember_me" />
                            <span>{{ 'security.login.remember_me' | trans }}</span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <button type="submit" class="btn btn-primary px-4">{{ 'security.login.submit' | trans }}</button>
                </div>
                <div class="col-6 text-right">
                    <a class="btn btn-link px-0" href="{{ path('fos_user_resetting_request') }}">{{ 'security.signup.forgotpassword' | trans }}</a>
                </div>
            </div>
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
        </form>
    </div>
</div>
<div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
    <div class="card-body text-center">
        <div>
            <h2>{{ 'security.signup.signup' | trans }}</h2>
            <p>{{ 'security.signup.description' | trans }}</p>
            <a class="btn btn-primary active mt-3" href="{{ path('fos_user_registration_register') }}">{{ 'security.signup.register' | trans }}</a>
        </div>
    </div>
</div>
