{% trans_default_domain 'FOSUserBundle' %}

<div class="card p-4">
    <div class="card-body">
        <h1>{{ 'security.forgotpassword.retrieve' | trans }}</h1>
        <p class="text-muted">{{ 'security.forgotpassword.description' | trans }}</p>
        <form action="{{ path('fos_user_resetting_send_email') }}" method="post" class="fos_user_resetting_request">
            <div class="input-group mb-3">
                <div class="input-group-prepend"><span class="input-group-text"><i class="icon-user"></i></span></div>
                <input type="text" class="form-control" name="username" placeholder="{{ 'security.login.username_or_email' | trans }}"
                       required="required" autocomplete="username" autofocus>
            </div>
            <div class="row">
                <div class="col-12 text-right">
                    <button type="submit" class="btn btn-primary" href="{{ path('fos_user_resetting_request') }}">
                        {{ 'security.forgotpassword.submit' | trans }}
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
